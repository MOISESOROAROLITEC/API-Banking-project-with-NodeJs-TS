generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Account {
  iban        String        @id @unique
  name        String
  number      String        @unique
  email       String        @unique
  password    String
  balance     Float
  currency    String
  bic         String
  type        String        @default("epargne")
  createAt    DateTime      @default(now())
  updateAt    DateTime      @updatedAt
  transaction Transaction[]
  SubAccount  SubAccount[]
}

model SubAccount {
  iban              String   @id @unique
  name              String
  number            String   @unique
  password          String
  balance           Float
  currency          String
  bic               String
  type              String   @default("epargne")
  createAt          DateTime @default(now())
  updateAt          DateTime @updatedAt
  AccountParent     Account? @relation(fields: [accountParentIban], references: [iban])
  accountParentIban String?
}

model Transaction {
  id                 Int      @id @default(autoincrement())
  amount             Float
  transactionType    String
  accountReciver     String
  createAt           DateTime @default(now())
  updateAt           DateTime @updatedAt
  AccountEmmiter     Account? @relation(fields: [accountEmmiterIban], references: [iban])
  accountEmmiterIban String?
}
